<Window x:Class="MasterMan.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mvvm="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        DataContext="{StaticResource MainViewModel}"
        Title="MasterMan" Height="600" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" KeyUp="OnWindowKeyUp">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <mvvm:EventToCommand Command="{Binding Dispose}"></mvvm:EventToCommand>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Margin="10,541,0,0" VerticalAlignment="Top" Width="75" Command="{Binding CreateWorld}"/>
        <Canvas x:Name="SceneWorld" Margin="0,0,0,50"/>

    </Grid>
</Window>
